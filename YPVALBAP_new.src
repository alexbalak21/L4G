AFOLDEF = 1
ABRENA = ""
BOX1 = "GAU_CHE1"
OBJLIS(1) = "YVB"
CHGLIS(1) = 2
BROLIS(1) = 2
TRELIS(1) = 1
DESLIS(1) = "POHNUM"
If clalev([M:YPVB0])=0 : Local Mask YPVALBAP [YPVB0] : Endif
Gosub TIT
nolign = 1
If clalev([F:POH])=0 : Local file PORDER [POH] : Endif
If clalev([F:YBS])=0 : Local file BPSUPPLIER [YBS] : Endif
